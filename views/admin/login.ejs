<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css"></link>
    <link rel="stylesheet" href="/css/adminstyle.css"></link>
    <script src="/bower_components/ckeditor/ckeditor.js"></script>

    <title>
        <%= title %>
    </title>
</head>

<body>

    <div class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
                <a class="navbar-brand" href="/admin">Blog Admin</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">Get me out of here!</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>

    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center"> Dashboard <small>Account login</small></h1>
                </div>
            </div>
        </div>
    </header>


    <section id="login-form">

        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    
                    <!--show any errors that come back with field validation-->
                    <% if (locals.errors) { %>
                        <% errors.forEach(function(error) { %>
                            <div class="alert alert-danger"><%= error.msg %></div>
                        <% }); %>
                    <% } %>
                    <% if(success && success.length > 0){ %>
                        <div class="alert alert-success" role="alert">
                            <%= success %>
                        </div>
                    <% } %>

                    
                    <form role="form" action="/users/login" method="POST">
    
                        <h2>Please Login <small>Or else you won't be able to write awesome blog posts!</small></h2>
                        <hr class="colorgraph">
        
                        <div class="form-group">
                            <label for="email">Username:</label>
            				<input type="text" name="username" class="form-control input-lg" placeholder="Username" tabindex="1">
            			</div>
            			
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" name="password" class="form-control input-lg" placeholder="Password" tabindex="2">
                        </div>
                        
                        <p>Need an account? <a href="/users/register">Register now!</a></p>

                        <hr class="colorgraph">
            			<div class="row">
            				<div class="col-xs-12 col-md-6 col-md-offset-3">
            				    <input type="submit" value="Login" class="btn btn-primary btn-block btn-lg main-color-bg" tabindex="3">
            				</div>
            			</div>
        
                    </form>
                </div>
            </div>
        </div>
        
    </section>
    <!-- end of #main section -->

    <% include ./partials/footer %>
