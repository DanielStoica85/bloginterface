<% include ./partials/header %>

    <section id="main">
        <div class="container">
            <div class="row">

                <div class="col-md-3">
                    <% include ./partials/stats %>
                </div>
                <!-- end of col-md-3 SIDEBAR -->

                <div class="col-md-9">

                    <!-- Pages List -->
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            
                            <div class="row">
                                <div class="col-xs-6">
                                    <h3 class="panel-title">Posts</h3>
                                </div>
                                <div class="col-xs-4">
                                    
                                </div>
                                <div class="col-xs-2">
                                    <span class="pull-right" id="filtericon" onclick ="toggleSearchDisplay()" data-toggle="tooltip" title="Click to search posts!" data-placement="auto" data-animation="true">
                						<i class="glyphicon glyphicon-filter"></i>
                					</span>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <!--SEARCH INPUT-->
                                <div class="col-md-12">
                                    <input class="form-control" type="text" placeholder="Posts search" id="searchinput" onkeyup="filterTableContent()"></input>
                                </div>
                                <!--END OF SEARCH INPUT-->
                            </div>
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Created</th>
                                    <th>Action</th>
                                </tr>
                                
                                <% posts.forEach(function(post) { %>
                                
                                    <tr>
                                        <td><%= post.title %></td>
                                        <td><%- post.content.substring(0, 200) %></td>
                                        <td>October 15, 2017</td>
                                        <td class = "actions">
                                            <a href = "/post/edit/<%= post._id %>"><button type="button" class="btn btn-primary btn-sm">Edit</button></a>
                                            <button type="button" class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>
                                
                                <% }); %>
                                
                            </table>
                        </div>
                    </div>

                </div>

            </div>
            <!-- end of row -->
        </div>
        <!-- end of main container -->
    </section>
    <!-- end of #main section -->

    <% include ./partials/footer %>
