<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css"></link>
    <link rel="stylesheet" href="/css/adminstyle.css"></link>
    <title>
        <%= title %>
    </title>
</head>

<body>

    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                <a class="navbar-brand" href="/users/register">Blog Admin</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">Get me out of here!</a></li>
                </ul>

            </div>
        </div>
    </div>
    
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center"> Dashboard <small>Register</small></h1>
                </div>
            </div>
        </div>
    </header>


    <section id="register-form">

        
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    
                    <!--show any errors that come back with field validation-->
                    <% if (locals.errors) { %>
                        <% errors.forEach(function(error) { %>
                            <div class="alert alert-danger"><%= error.msg %></div>
                        <% }); %>
                    <% } %>
                    
                    <form role="form" action="/users/register" method="POST">
    
                        <h2>Please Sign Up <small>Bogdan wants you to join his blog team!</small></h2>
                        <hr class="colorgraph">
        
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="fname">First name:</label><span class ="required">*</span>
                                    <input type="text" name="fname" class="form-control input-lg" placeholder="First Name" tabindex="1" >
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="lname">Last name:</label><span class ="required">*</span>
                                    <input type="text" name="lname"class="form-control input-lg" placeholder="Last Name" tabindex="2" >
                                </div>
                            </div>
                        </div>
        
                        <div class="form-group">
                            <label for="name">Username:</label><span class ="required">*</span>
                            <input type="text" name="username" class="form-control input-lg" placeholder="Username" tabindex="3" >
                        </div>
            			<div class="form-group">
            			    <label for="email">Please enter your email:</label><span class ="required">*</span>
            				<input type="email" name="email" class="form-control input-lg" placeholder="Email Address" tabindex="4" >
            			</div>
        
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="password">Password:</label><span class ="required">*</span>
                                    <input type="password" name="password" class="form-control input-lg" placeholder="Password" tabindex="5" >
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="password2">Confirm password:</label><span class ="required">*</span>
                                    <input type="password" name="password2" class="form-control input-lg" placeholder="Confirm Password" tabindex="6" >
                                </div>
                            </div>
                        </div>
        
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="country">Country of residence:</label>
                                    <input type="text" name="country" class="form-control input-lg" placeholder="Country" tabindex="7">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label for="city">City of residence:</label>
                                    <input type="text" name="city"class="form-control input-lg" placeholder="City" tabindex="8">
                                </div>
                            </div>
                        </div>
                        
                        <hr class="colorgraph">
            			<div class="row">
            				<div class="col-xs-12 col-md-6 col-md-offset-3"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg main-color-bg" tabindex="9"></div>
            			</div>
        
                    </form>
                </div>
            </div>
        </div>
        
    </section>


</body>

<% include ./partials/footer %>
