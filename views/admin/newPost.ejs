<% include ./partials/header %>

    <section id="main">
        <div class="container">
            <div class="row">

                <div class="col-md-3">
                    <% include ./partials/stats %>
                </div>
                <!-- end of col-md-3 SIDEBAR -->

                <div class="col-md-9">

                    <!--Add Post section-->
                    
                    <% if (locals.errors) { %>
                        <% errors.forEach(function(error) { %>
                            <div class="alert alert-danger"><%= error.msg %></div>
                        <% }); %>
                    <% } %>
                    
                    <form action='/posts' method='POST'>
                        <div class="form-group">
                            <label for="title">Title</label><span class ="required">*</span>
                            <% if (locals.partialPost) { %>
                                <input class="form-control" type="text" name="title" value="<%= partialPost.title %>"></input>
                            <% } else { %>
                                <input class="form-control" type="text" name="title" placeholder="Insert title here..."></input>
                            <% } %>
                            <span class="error" aria-live="polite"></span>
                        </div>
                        <div class="form-group">
                            <label for="content">Main Image</label><span class ="required">*</span>
                            <% if (locals.partialPost) { %>
                                <input class="form-control" type="text" name="image" value ="<%= partialPost.image %>"></input>
                            <% } else { %>
                                <input class="form-control" type="text" name="image" placeholder="Insert image url here..."></input>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="content">Content</label><span class ="required">*</span>
                            <% if (locals.partialPost) { %>
                                <textarea name="content" class="form-control" value = "<%= partialPost.content %>"></textarea>
                            <% } else { %>
                                <textarea name="content" class="form-control"></textarea>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="content">Categories</label><span class ="required">*</span>
                            <% if (locals.partialPost) { %>
                                <textarea name="category" class="form-control"><%= partialPost.category %></textarea>
                            <% } else { %>
                                <textarea name="category" class="form-control" placeholder="Insert categories here, one on each line..."></textarea>
                            <% } %>
                        </div>

                        <div class="form-group newPostButton">
                            <button class="btn btn-md btn-primary" formaction="/testPage1">Preview Post</button>
                        </div>
                        <div class="form-group newPostButton">
                            <button class="btn btn-md btn-success" formaction="/testPage2">Save Post</button>
                        </div>
                        <div class="form-group newPostButton">
                            <button class="btn btn-md btn-danger" class = "submit-button" id = "publish-new-post">Publish Post</button>
                        </div>

                    </form>

                    <!--End of Add Post section-->

                </div>

            </div>
            <!-- end of row -->
        </div>
        <!-- end of main container -->
    </section>
    <!-- end of #main section -->

    <script>
        CKEDITOR.replace('content');
    </script>

    <% include ./partials/footer %>
