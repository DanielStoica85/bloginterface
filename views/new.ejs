<% include ./partials/header %>

    <h1>Add New Post</h1>
    
    <form action = "/posts/new" method = "POST">
        <div class="form-group">
            <label for = "title">Title</label>
            <input class="form-control" name = "title" type = "text" placeholder = "Title"></input>
        </div>
        <div class="form-group">
            <label for = "image">Image</label>
            <input class="form-control" name = "image" type = "text" placeholder = "Image Link"></input>
        </div>
        <div class="form-group">
            <label for = "video">Video</label>
            <input class="form-control" name = "video" type = "text" placeholder = "Video Link"></input>
        </div>
        <div class="form-group">
            <label for = "content">Content</label>
            <textarea class = "form-control" name = "content" placeholder = "Insert text here..."></textarea>
        </div>
        <div class="form-group">
            <button class = "btn btn-lg btn-primary">Add Post</button>
        </div>
    </form>

<% include ./partials/footer %>