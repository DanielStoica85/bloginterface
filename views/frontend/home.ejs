    <section id="main">

        <div class="container-fluid">

            <div class="row">

                <section id="posts" class="col-md-9 col-sm-12 col-xs-12">
                    <div class="row">

                        <% posts.forEach(function(post) { %>
                        
                            <article class="col-md-10 col-md-offset-1 postPreview">
                                
                                <h1><%= post.title %></h1>
                                <p class="lead">
                                    <i class="fa fa-user"></i> Posted by <span id="author"><%= post.author %></span>
                                    <span class="pull-right"><i class="fa fa-calendar"></i> August 24, 2017</span>
                                </p>
                                <p><%- post.content.substring(0, 500) %></p>
                                <a href = "/post/<%= post._id %>" class = "btn btn-lg">Read more...</a>
                                
                            </article>
                        
                        <% }); %>

                    </div>
                </section>

                <section id="sidebar" class="col-md-3 col-sm-12 col-xs-12">
                    
                <div class="row">
                    <!--Blog search-->
                    <div class="well" id = "searchbox">
                        <h4><i class="fa fa-search"></i> Blog Search...</h4>
                        <div class="input-group" id = "searchForm">
                            <input type="text" class="form-control" name="search" id = "searchInput">
                            <span class="input-group-bt">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <!--End of blog search-->
                </div>
                    
                </section>

            </div>

        </div>


    </section>

