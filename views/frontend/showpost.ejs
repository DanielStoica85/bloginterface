<% include ./partials/postheader %>

    <section id="main">

        <div class="container-fluid">

            <div class="row">

                <!--Single Post-->
                <section id="singlePost" class="col-md-9 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1" id = "breadcrumb">

                            <!--Breadcrumb-->
                            
                                <div class="row">
                                    <ol class="breadcrumb">
                                        <li><a href="#">Home</a></li>
                                                                            <!--To add helper function for this-->
                                        <li><a href="#"><%= post.category.charAt(0).toUpperCase() + post.category.slice(1) %></a></li>
                                        <li class="active"><%= post.title %></li>
                                    </ol>
                                </div>

                            <!--End of breadcrumb-->

                        </div>
                    </div>
                    
                    <div class="row">
                        <div class = "col-md-10 col-md-offset-1" id="post">
                            <h1><%= post.title %></h1>
                            <p class="lead" id = "postInfo">
                                <i class="fa fa-user"></i>
                                Posted by <span id = "author"><%= post.author %>k</span>
                                <span class = "pull-right"><i class="fa fa-calendar"></i> August 24, 2017</span>
                            </p>
                            <p><%- post.content %></p>
                            <p><i class="fa fa-tags"></i> Tags: <a href=""><span class="badge badge-info"><%= post.category %></span></a></p>
                        </div>    
                    </div>
                    
                </section>
                
                <!--End of single post-->

                <section id="sidebar" class="col-md-3 col-sm-12 col-xs-12">
                    
                    <div class="row">
                        <!--Blog search-->
                        <div class="well" id = "searchbox">
                            <h4><i class="fa fa-search"></i> Blog Search...</h4>
                            <div class="input-group" id = "searchForm">
                                <input type="text" class="form-control" name="search" id = "searchInput">
                                <span class="input-group-bt">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </div>
                        <!--End of blog search-->
                    </div>

                </section>

            </div>

        </div>


    </section>

    <% include ./partials/footer %>
